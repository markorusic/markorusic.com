---
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import { RESUME, RESUME_DATA } from "@consts";
import { dateRange } from "@lib/utils";
---

<PageLayout title={RESUME.TITLE} description={RESUME.DESCRIPTION}>
  <Container>
    <section class="mx-auto w-full max-w-2xl space-y-8 print:space-y-4">
      <div class="animate flex items-center justify-between">
        <div class="flex-1 space-y-1.5">
          <h1 class="text-2xl font-bold text-foreground">{RESUME_DATA.name}</h1>
          <p
            class="max-w-md text-pretty text-sm text-muted-foreground print:text-[12px]"
          >
            {RESUME_DATA.title}
          </p>

          <p
            class="max-w-md items-center text-pretty text-xs text-muted-foreground"
          >
            <a
              class="inline-flex gap-x-1.5 align-baseline leading-none hover:underline"
              href={RESUME_DATA.locationGoogleMaps}
              target="_blank"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-globe size-3"
              >
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"
                ></path>
                <path d="M2 12h20"></path>
              </svg>
              {RESUME_DATA.location}, {RESUME_DATA.timeZone}
            </a>
          </p>
          <div
            class="flex gap-x-1 pt-1 text-sm text-muted-foreground print:hidden"
          >
            <a
              href={`mailto:${RESUME_DATA.email}`}
              class="inline-flex size-8 items-center justify-center whitespace-nowrap rounded-md border border-input bg-background text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-mail size-4"
              >
                <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
              </svg>
            </a>
            <a
              href={`tel:${RESUME_DATA.phoneNumber}`}
              class="inline-flex size-8 items-center justify-center whitespace-nowrap rounded-md border border-input bg-background text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-phone size-4"
              >
                <path
                  d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                ></path>
              </svg>
            </a>
            <a
              href={RESUME_DATA.socials.github}
              target="_blank"
              class="inline-flex size-8 items-center justify-center whitespace-nowrap rounded-md border border-input bg-background text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50"
            >
              <svg
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
                class="size-4"
              >
                <path
                  fill="currentColor"
                  d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
                ></path>
              </svg>
            </a>
            <a
              href={RESUME_DATA.socials.linkedin}
              target="_blank"
              class="inline-flex size-8 items-center justify-center whitespace-nowrap rounded-md border border-input bg-background text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50"
            >
              <svg
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
                class="size-4"
              >
                <title>LinkedIn</title>
                <path
                  fill="currentColor"
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </a>
            <a
              href={RESUME_DATA.socials.x}
              target="_blank"
              class="inline-flex size-8 items-center justify-center whitespace-nowrap rounded-md border border-input bg-background text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50"
            >
              <svg
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
                class="size-4"
              >
                <title>X</title>
                <path
                  fill="currentColor"
                  d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"
                ></path>
              </svg>
            </a>
          </div>
          <div
            class="hidden flex-col gap-x-1 text-sm text-muted-foreground print:flex print:text-[12px]"
          >
            <a href={`mailto:${RESUME_DATA.email}`}>
              <span class="underline">{RESUME_DATA.email}</span>
            </a>
            <a href={`tel:${RESUME_DATA.phoneNumber}`}>
              <span class="underline">{RESUME_DATA.phoneNumber}</span>
            </a>
          </div>
        </div>
        <span class="relative flex size-28 shrink-0 overflow-hidden rounded-xl">
          <img
            class="h-full w-full rounded-full"
            alt={RESUME_DATA.name}
            src={RESUME_DATA.avatar}
          />
        </span>
      </div>
      <section class="animate flex min-h-0 flex-col gap-y-3">
        <h2 class="text-xl font-bold text-foreground">About</h2>
        <div class="flex flex-col space-y-2">
          {
            RESUME_DATA.about.map((sentence) => {
              return (
                <p class="text-pretty text-sm text-muted-foreground print:text-[12px]">
                  {sentence}
                </p>
              );
            })
          }
        </div>
      </section>
      <section class="animate flex min-h-0 flex-col gap-y-3">
        <h2 class="text-xl font-bold text-foreground">Work Experience</h2>
        {
          RESUME_DATA.experience.map((experience) => {
            return (
              <div class="rounded-lg text-foreground">
                <div class="flex flex-col space-y-1.5">
                  <div class="flex items-center justify-between gap-x-2 text-base">
                    <h3 class="inline-flex items-center justify-center gap-x-1 font-semibold leading-none">
                      <span>{experience.company}</span>
                      <span class="inline-flex gap-x-1">
                        <div class="inline-flex items-center text-nowrap rounded-md border border-transparent bg-secondary px-2 py-0.5 align-middle text-xs font-semibold text-secondary-foreground transition-colors hover:bg-secondary/60 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 print:px-1 print:py-0.5 print:text-[8px] print:leading-tight">
                          {experience.location}
                        </div>
                      </span>
                    </h3>
                    <div class="text-xs tabular-nums text-gray-500">
                      {dateRange(
                        new Date(experience.dateStart),
                        experience.dateEnd
                          ? new Date(experience.dateEnd)
                          : "Present",
                      )}
                    </div>
                  </div>
                  <h4 class="text-sm leading-none print:text-[12px]">
                    {experience.position}
                  </h4>
                </div>
                <ul class="mt-2 flex list-inside list-disc flex-col gap-1.5 text-pretty text-sm text-muted-foreground">
                  {experience.bulletpoints.map((item) => {
                    return <li>{item}</li>;
                  })}
                </ul>
              </div>
            );
          })
        }
      </section>
      <section class="animate flex min-h-0 flex-col gap-y-3">
        <h2 class="text-xl font-bold text-foreground">Education</h2>
        {
          RESUME_DATA.education.map((education) => {
            return (
              <div class="rounded-lg text-foreground">
                <div class="flex flex-col space-y-1.5">
                  <div class="flex items-center justify-between gap-x-2 text-base">
                    <h3 class="font-semibold leading-none">
                      <span>{education.institution}</span>
                      <span class="inline-flex gap-x-1">
                        <div class="inline-flex items-center text-nowrap rounded-md border border-transparent bg-secondary px-2 py-0.5 align-middle text-xs font-semibold text-secondary-foreground transition-colors hover:bg-secondary/60 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 print:px-1 print:py-0.5 print:text-[8px] print:leading-tight">
                          {education.location}
                        </div>
                      </span>
                    </h3>
                    <div class="text-xs tabular-nums text-gray-500">
                      {dateRange(
                        new Date(education.dateStart),
                        new Date(education.dateEnd),
                      )}
                    </div>
                  </div>
                </div>
                <div class="mt-2 text-pretty text-sm text-muted-foreground print:text-[12px]">
                  {education.description}
                </div>
              </div>
            );
          })
        }
        <section class="flex min-h-0 flex-col gap-y-3">
          <h2 class="text-xl font-bold text-foreground">Skills</h2>
          <div class="flex flex-wrap gap-1 print:gap-2">
            {
              RESUME_DATA.skills.map((skill) => {
                return (
                  <div class="inline-flex items-center text-nowrap rounded-md border border-transparent bg-primary/80 px-2 py-0.5 text-xs font-semibold text-primary-foreground transition-colors hover:bg-primary/60 focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 print:p-0 print:text-[10px]">
                    {skill}
                  </div>
                );
              })
            }
          </div>
        </section>
      </section>
    </section>
  </Container>
</PageLayout>
